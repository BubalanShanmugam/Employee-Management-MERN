# Backend environment example
# Copy this file to `.env` and fill real values before running the app

# Postgres connection URL (format: postgres://user:password@host:port/dbname)
DATABASE_URL=postgres://employee_user:yourPassword@localhost:5432/employee_db

# JWT secret used to sign tokens
JWT_SECRET=change-this-secret

# Server port
PORT=3000

# bcrypt salt rounds (optional)
BCRYPT_SALT_ROUNDS=10
